<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".activities.ItemDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_white"
            app:titleTextColor="@color/text_primary"
            app:navigationIcon="@null"
            app:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light" />

        <!-- Media Gallery Section -->
        <LinearLayout
            android:id="@+id/media_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media ViewPager2 for images and videos -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/media_viewpager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/gray_light" />

            <!-- Media indicators -->
            <LinearLayout
                android:id="@+id/media_indicators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:visibility="gone" />

            <!-- Video play button overlay (visible when video is present) -->
            <ImageView
                android:id="@+id/video_play_overlay"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="-180dp"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/bg_circle_overlay"
                android:padding="16dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Play video" />

        </LinearLayout>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Item Title -->
            <TextView
                android:id="@+id/text_item_title_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.App.HeadlineLarge"
                android:layout_marginBottom="8dp"
                tools:text="Sample Item Title" />

            <!-- Category and Location Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/text_item_category_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.App.LabelLarge"
                    android:textColor="@color/primary_color"
                    android:drawableStart="@drawable/ic_category"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    tools:text="Electronics > Phones" />

                <TextView
                    android:id="@+id/text_item_location_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.App.LabelMedium"
                    android:textColor="@color/text_secondary"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    tools:text="New York, NY" />

            </LinearLayout>

            <!-- Posted Date -->
            <TextView
                android:id="@+id/text_item_date_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.App.LabelSmall"
                android:textColor="@color/text_hint"
                android:layout_marginBottom="16dp"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="Posted on March 15, 2024" />

            <!-- Description Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                style="@style/TextAppearance.App.HeadlineSmall"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_item_description_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.App.BodyLarge"
                android:layout_marginBottom="24dp"
                tools:text="This is a detailed description of the item. It can be multiple lines and provide comprehensive information about what is being shared." />

            <!-- Contact Information Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_information"
                style="@style/TextAppearance.App.HeadlineSmall"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_rounded_light"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/text_owner_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.App.LabelLarge"
                    android:textColor="@color/text_primary"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/roboto_medium"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/text_owner_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.App.BodyLarge"
                    android:textColor="@color/text_secondary"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    tools:text="john.doe@example.com" />

                <TextView
                    android:id="@+id/text_owner_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.App.BodyLarge"
                    android:textColor="@color/text_secondary"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    tools:text="+1 (555) 123-4567" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_contact_owner"
                    style="@style/Widget.App.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/contact_owner"
                    android:textAppearance="@style/TextAppearance.App.LabelLarge"
                    android:backgroundTint="@color/aston_green"
                    android:drawableStart="@drawable/ic_message"
                    android:drawablePadding="8dp" />

                <Button
                    android:id="@+id/btn_share_item"
                    style="@style/Widget.App.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/share"
                    android:textAppearance="@style/TextAppearance.App.LabelLarge"
                    android:textColor="@color/aston_green"
                    android:drawableStart="@drawable/ic_share"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>


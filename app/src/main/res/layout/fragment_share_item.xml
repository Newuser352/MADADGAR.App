<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Title and Share Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share an Item"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="textStart" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share_item"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textSize="12sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_share"
                app:iconGravity="textStart"
                app:elevation="4dp"
                android:backgroundTint="@color/aston_green"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Category Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Selection"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Category Type"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:layout_marginTop="0dp" />

        <RadioGroup
            android:id="@+id/radio_group_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">

            <RadioButton
                android:id="@+id/radio_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Food"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:buttonTint="@color/aston_green" />

            <RadioButton
                android:id="@+id/radio_non_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Non-Food"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:buttonTint="@color/aston_green" />
        </RadioGroup>

        <!-- Subcategory Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_item_subcategory"
            style="@style/Widget.App.TextInputLayout.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:hint="Select Subcategory"
            app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
            app:startIconTint="@color/aston_green"
            app:boxBackgroundColor="@color/background_light">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/dropdown_subcategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Popular Subcategories RecyclerView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Categories"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_popular_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />

        <!-- Expiry Timer (initially hidden) -->
        <LinearLayout
            android:id="@+id/layout_expiry_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:background="@color/background_accent"
            android:padding="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/text_expiry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Food Expiry Time"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                
                <ImageButton
                    android:id="@+id/btn_expiry_info"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Info about auto-deletion"
                    android:tint="@color/aston_green"/>
                
            </LinearLayout>
            <RadioGroup
                android:id="@+id/radio_group_time_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_hours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hours"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:buttonTint="@color/aston_green" />
                <RadioButton
                    android:id="@+id/radio_days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Days"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:buttonTint="@color/aston_green"
                    android:checked="true" />
            </RadioGroup>
            <com.google.android.material.slider.Slider
                android:id="@+id/slider_expiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:valueFrom="1"
                android:valueTo="30"
                android:stepSize="1"
                android:value="3"
                app:thumbColor="@color/aston_green"
                app:trackColorActive="@color/aston_green"
                app:trackColorInactive="@color/light_accent"
                app:labelBehavior="withinBounds"/>
            <TextView
                android:id="@+id/text_expiry_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3 days until expiry"
                android:textColor="@color/text_color"
                android:textSize="10sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Item Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_item_name"
            style="@style/Widget.App.TextInputLayout.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:hint="Item Name"
            app:startIconDrawable="@android:drawable/ic_menu_edit"
            app:startIconTint="@color/aston_green"
            app:boxBackgroundColor="@color/background_light">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Item Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_item_description"
            style="@style/Widget.App.TextInputLayout.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:hint="Description"
            app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
            app:startIconTint="@color/aston_green"
            app:boxBackgroundColor="@color/background_light">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:maxLines="4" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Location Selection Button -->
        <Button
            android:id="@+id/btn_select_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Select Location"
            android:backgroundTint="@color/aston_green"
            android:textColor="@android:color/white" />

        <!-- Suggested Locations RecyclerView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggested Locations"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_suggested_locations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />

        <!-- Media Upload Section (no card) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media Upload"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Upload up to 6 photos and a video of your item"
            android:textColor="@color/text_color"
            android:textSize="10sp" />
<FrameLayout
            android:id="@+id/layout_main_media_preview"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"
            android:background="@color/background_accent">
            <ImageView
                android:id="@+id/icon_upload"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_upload"
                app:tint="@color/aston_green"
                android:layout_gravity="center"
                android:contentDescription="Upload Icon"
                android:alpha="0.7"/>
            <ImageView
                android:id="@+id/image_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="Image Preview" />
            <VideoView
                android:id="@+id/video_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/icon_play_video"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_media_play"
                app:tint="@color/aston_green"
                android:layout_gravity="center"
                android:contentDescription="Play Video"
                android:visibility="gone"
                android:alpha="0.9"/>
            <TextView
                android:id="@+id/text_media_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="4dp"
                android:background="@color/aston_green"
                android:textColor="@android:color/white"
                android:padding="2dp"
                android:text="0/6 Photos"
                android:visibility="visible"/>
        </FrameLayout>
        <TextView
            android:id="@+id/text_video_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="No video uploaded"
            android:textColor="@color/hint_color"
            android:textSize="10sp"
            android:textAlignment="center"/>
        <HorizontalScrollView
            android:id="@+id/scroll_preview_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/background_light"
            android:padding="2dp">
            <LinearLayout
                android:id="@+id/layout_image_previews"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"/>
        </HorizontalScrollView>
        <LinearLayout
            android:id="@+id/layout_media_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
<com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upload_photo"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Add Photos"
                android:textSize="10sp"
                android:layout_marginEnd="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:icon="@android:drawable/ic_menu_gallery"
                app:iconGravity="textStart"
                app:strokeColor="@color/aston_green"
                android:textColor="@color/text_color"
                app:iconTint="@color/aston_green" />
<com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upload_video"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Add Video"
                android:textSize="10sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:icon="@android:drawable/ic_menu_camera"
                app:iconGravity="textStart"
                app:strokeColor="@color/aston_green"
                android:textColor="@color/text_color"
                app:iconTint="@color/aston_green" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear_photos"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Photos"
                android:textSize="10sp"
                android:textColor="@color/error_color"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@color/error_color" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear_video"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Video"
                android:textSize="10sp"
                android:textColor="@color/error_color"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@color/error_color" />
        </LinearLayout>

        <!-- Contact Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Information"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Main Contact Number"
            android:textColor="@color/text_color"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_contact_number"
                style="@style/Widget.App.TextInputLayout.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:hint="Phone Number *"
                app:boxBackgroundColor="@color/background_light">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Additional Contact Number (Required)"
            android:textColor="@color/text_color"
            android:textSize="12sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_contact1"
            style="@style/Widget.App.TextInputLayout.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:hint="Primary Contact *"
            app:startIconDrawable="@android:drawable/ic_menu_call"
            app:startIconTint="@color/aston_green"
            app:boxBackgroundColor="@color/background_light">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_contact1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_contact2"
            style="@style/Widget.App.TextInputLayout.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:hint="Secondary Contact (Optional)"
            app:startIconDrawable="@android:drawable/ic_menu_call"
            app:startIconTint="@color/aston_green"
            app:boxBackgroundColor="@color/background_light">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_contact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>



        <!-- Bottom spacing for better scrolling -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>
</ScrollView>

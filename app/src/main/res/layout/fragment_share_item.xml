<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <View
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_bar_background"
            android:elevation="4dp" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share an Item"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textAlignment="center" />

        <!-- Category Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/aston_green"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category Selection"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Food/Non-Food Radio Buttons -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Select Category Type"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/radio_group_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_food"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Food"
                        android:textColor="@color/text_color"
                        android:buttonTint="@color/aston_green" />

                    <RadioButton
                        android:id="@+id/radio_non_food"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Non-Food"
                        android:textColor="@color/text_color"
                        android:buttonTint="@color/aston_green" />
                </RadioGroup>

                <!-- Subcategory Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_item_subcategory"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Select Subcategory"
                    app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                    app:startIconTint="@color/aston_green"
                    app:boxBackgroundColor="@color/background_light">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/dropdown_subcategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Expiry Timer (initially hidden) -->
                <LinearLayout
                    android:id="@+id/layout_expiry_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:background="@color/background_purple"
                    android:padding="12dp">
                    
                    <TextView
                        android:id="@+id/text_expiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Food Expiry Time (Days)"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    
                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_expiry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:valueFrom="1"
                        android:valueTo="30"
                        android:stepSize="1"
                        android:value="3"
                        app:thumbColor="@color/aston_green"
                        app:trackColorActive="@color/aston_green"
                        app:trackColorInactive="@color/light_purple"
                        app:labelBehavior="withinBounds"/>
                        
                    <TextView
                        android:id="@+id/text_expiry_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="3 days until expiry"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Item Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/aston_green"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Details"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Item Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_item_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Item Name"
                    app:startIconDrawable="@android:drawable/ic_menu_edit"
                    app:startIconTint="@color/aston_green"
                    app:endIconMode="clear_text"
                    app:boxBackgroundColor="@color/background_light">
                    
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Item Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_item_description"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Description"
                    app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                    app:startIconTint="@color/aston_green"
                    app:endIconMode="clear_text"
                    app:boxBackgroundColor="@color/background_light">
                    
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_item_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:maxLines="6" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Item Location -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_item_location"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Location"
                    app:startIconDrawable="@android:drawable/ic_menu_mylocation"
                    app:startIconTint="@color/aston_green"
                    app:endIconMode="clear_text"
                    app:boxBackgroundColor="@color/background_light">
                    
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_item_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Media Upload Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_media_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/aston_green"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media Upload"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Upload up to 6 photos and a video of your item"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <!-- Main Media Preview -->
                <FrameLayout
                    android:id="@+id/layout_main_media_preview"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/background_purple">
                    
                    <ImageView
                        android:id="@+id/icon_upload"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_upload"
                        app:tint="@color/aston_green"
                        android:layout_gravity="center"
                        android:contentDescription="Upload Icon"
                        android:alpha="0.7"/>

                    <ImageView
                        android:id="@+id/image_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:contentDescription="Image Preview" />
                        
                    <VideoView
                        android:id="@+id/video_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />
                        
                    <ImageView
                        android:id="@+id/icon_play_video"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_media_play"
                        app:tint="@color/aston_green"
                        android:layout_gravity="center"
                        android:contentDescription="Play Video"
                        android:visibility="gone"
                        android:alpha="0.9"/>
                        
                    <TextView
                        android:id="@+id/text_media_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:background="@color/aston_green"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:text="0/6 Photos"
                        android:visibility="visible"/>
                </FrameLayout>
                
                <!-- Media Upload Status -->
                <TextView
                    android:id="@+id/text_video_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No video uploaded"
                    android:textColor="@color/hint_color"
                    android:textSize="14sp"
                    android:textAlignment="center"/>
                
                <!-- Thumbnails -->
                <HorizontalScrollView
                    android:id="@+id/scroll_preview_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/background_light"
                    android:padding="4dp">
                    
                    <LinearLayout
                        android:id="@+id/layout_image_previews"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"/>
                </HorizontalScrollView>
                
                <!-- Media Upload Buttons -->
                <LinearLayout
                    android:id="@+id/layout_media_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_upload_photo"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add Photos"
                        android:layout_marginEnd="8dp"
                        app:icon="@android:drawable/ic_menu_gallery"
                        app:iconGravity="textStart"
                        app:strokeColor="@color/aston_green"
                        android:textColor="@color/text_color"
                        app:iconTint="@color/aston_green" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_upload_video"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add Video"
                        app:icon="@android:drawable/ic_menu_camera"
                        app:iconGravity="textStart"
                        app:strokeColor="@color/aston_green"
                        android:textColor="@color/text_color"
                        app:iconTint="@color/aston_green" />
                </LinearLayout>
                
                <!-- Media Management Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_clear_photos"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Clear Photos"
                        android:textColor="@color/error_color"
                        app:icon="@android:drawable/ic_menu_delete"
                        app:iconTint="@color/error_color" />
                        
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_clear_video"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Clear Video"
                        android:textColor="@color/error_color"
                        app:icon="@android:drawable/ic_menu_delete"
                        app:iconTint="@color/error_color" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Contact Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/aston_green"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Information"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Main Contact Number -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Main Contact Number"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    
                    <com.hbb20.CountryCodePicker
                        android:id="@+id/country_code_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ccp_showNameCode="false"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_showFullName="false" />
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_contact_number"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:hint="Phone Number"
                        app:endIconMode="clear_text"
                        app:boxBackgroundColor="@color/background_light">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_contact_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Additional Contacts -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Additional Contact Numbers (Optional)"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_contact1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Primary Contact"
                    app:startIconDrawable="@android:drawable/ic_menu_call"
                    app:startIconTint="@color/aston_green"
                    app:endIconMode="clear_text"
                    app:boxBackgroundColor="@color/background_light">
                    
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_contact1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_contact2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Secondary Contact"
                    app:startIconDrawable="@android:drawable/ic_menu_call"
                    app:startIconTint="@color/aston_green"
                    app:endIconMode="clear_text"
                    app:boxBackgroundColor="@color/background_light">
                    
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_contact2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Share Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share_item"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Share Item"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_share"
            app:iconGravity="textStart"
            app:elevation="4dp"
            android:backgroundTint="@color/aston_green"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>

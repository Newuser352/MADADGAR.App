<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material Design -->
    <style name="Base.Theme.MADADGARApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Color theming -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnBackground">@color/text_color</item>
        <item name="colorOnSurface">@color/text_color</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Material Design typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.DisplayLarge</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.DisplayMedium</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.DisplaySmall</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.App.HeadlineLarge</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.App.HeadlineMedium</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.HeadlineSmall</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.TitleLarge</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.TitleMedium</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.BodyLarge</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.BodyMedium</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.BodySmall</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.LabelLarge</item>
        
        <!-- Component styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined</item>
    </style>

    <style name="Theme.MADADGARApp" parent="Base.Theme.MADADGARApp" />
    
    <!-- Splash screen theme -->
    <style name="Theme.MADADGARApp.SplashScreen" parent="Theme.MADADGARApp">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    
    <!-- NoActionBar theme for Google Sign-In -->
    <style name="Theme.MADADGARApp.NoActionBar" parent="Theme.MADADGARApp">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <!-- Text styles are defined in text_styles.xml -->
    
    <!-- Modern TextInputLayout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/divider_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
        <item name="hintTextColor">@color/aston_green</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <!-- Animation Styles -->
    <style name="Animation.App.Splash" parent="android:Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Animation.App.Dialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item> <!-- Or your desired enter animation -->
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item> <!-- Or your desired exit animation -->
    </style>
    
    <!-- Bottom Navigation styles are defined in bottom_nav_theme.xml -->

    <!-- Bottom Sheet Dialog Theme -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet.Modal</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="Widget.App.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <!-- Compact TextInputLayout Style -->
    <style name="Widget.App.TextInputLayout.Small" parent="Widget.App.TextInputLayout">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>

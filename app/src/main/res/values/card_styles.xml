<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Default Card Style -->
    <style name="Widget.App.CardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">1dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="contentPadding">20dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:minHeight">64dp</item>
        <item name="strokeColor">@color/divider_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Elevated Card Style -->
    <style name="Widget.App.CardView.Elevated" parent="Widget.App.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Filled Card Style -->
    <style name="Widget.App.CardView.Filled" parent="Widget.App.CardView">
        <item name="cardBackgroundColor">@color/primary_light</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Outlined Card Style -->
    <style name="Widget.App.CardView.Outlined" parent="Widget.App.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="strokeColor">@color/outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Small Card Style -->
    <style name="Widget.App.CardView.Small" parent="Widget.App.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">12dp</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#26000000" />
        </shape>
    </item>
    
    <!-- Main background -->
    <item 
        android:top="2dp"
        android:bottom="4dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/aston_green" />
        </shape>
    </item>
    
</layer-list>

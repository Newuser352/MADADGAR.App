<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material Design for Dark Mode -->
    <style name="Base.Theme.MADADGARApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Color theming -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/background_white</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Dark mode setting for status bar icons -->

        <!-- Material Design typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.DisplayLarge</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.DisplayMedium</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.DisplaySmall</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.App.HeadlineLarge</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.App.HeadlineMedium</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.HeadlineSmall</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.TitleLarge</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.TitleMedium</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.BodyLarge</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.BodyMedium</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.BodySmall</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.LabelLarge</item>

        <!-- Component styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined</item>
    </style>

    <style name="Theme.MADADGARApp" parent="Base.Theme.MADADGARApp" />
    
    <!-- Splash screen theme for dark mode -->
    <style name="Theme.MADADGARApp.SplashScreen" parent="Theme.MADADGARApp">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- NoActionBar theme for Google Sign-In -->
    <style name="Theme.MADADGARApp.NoActionBar" parent="Theme.MADADGARApp">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    

    <application
        android:name=".MADADGARApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MADADGARApp"
        tools:targetApi="31">
        
        <!-- Splash Activity - Launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MADADGARApp.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Auth Selection Activity -->
        <activity
            android:name=".AuthSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <!-- Email Auth Selection Activity -->
        <activity
            android:name=".EmailAuthSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
            
        <!-- Signup Activity -->
        <activity
            android:name=".SignupActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
            
        <!-- WebView OAuth Activity -->
        <activity
            android:name=".WebViewOAuthActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MADADGARApp.NoActionBar">
            
            <!-- Handle Supabase email verification -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="crsqhxztqbfguylrgcnt.supabase.co"
                    android:pathPrefix="/auth/v1/verify" />
            </intent-filter>
            
            <!-- Handle Supabase OAuth callbacks -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="crsqhxztqbfguylrgcnt.supabase.co"
                    android:pathPrefix="/auth/v1/callback" />
            </intent-filter>
            
        </activity>
        
            
            
    </application>

</manifest>
